<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>SetupServlet</servlet-name>
        <servlet-class>net.emanifest.servlet.SetupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetupServlet</servlet-name>
        <url-pattern>/SetupServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ManifestServlet</servlet-name>
        <servlet-class>net.emanifest.servlet.ManifestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManifestServlet</servlet-name>
        <url-pattern>/ManifestServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>net.emanifest.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
